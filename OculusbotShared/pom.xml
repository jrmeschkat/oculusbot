		<dependency>
			<groupId>com.pi4j</groupId>
			<artifactId>pi4j-core</artifactId>
			<version>1.1-SNAPSHOT</version>
		</dependency>

		<dependency>
			<groupId>opencv</groupId>
			<artifactId>opencv</artifactId>
			<version>3.1.0</version>
		</dependency>
		
		<dependency>
			<groupId>opencv</groupId>
			<artifactId>opencv-natives</artifactId>
			<version>3.1.0</version>
		</dependency>
	</dependencies>
</project>